@using MysteryAuction.Core.Models.ProductReport
@model AddProductReportViewModel

@{
    ViewBag.Title = "Add Report";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" asp-controller="ProductReport" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">What is the problem:</label>
                <input asp-for="@Model.Description" class="form-control" value="" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input asp-for="@Model.ProductId" class="form-control" type="hidden" value="@Model.ProductId" />
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Report" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}